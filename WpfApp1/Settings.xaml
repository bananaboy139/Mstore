<Window x:Class="GUI.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Mstore - Settings" Height="186" Width="800" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True">
    <Viewbox>
        <Grid Background="#FF547ADE" Height="170" Width="800">
            <DockPanel x:Name="store_pass_dock" LastChildFill="False" VerticalAlignment="Top" Margin="0,30,0,0">
                <TextBlock Text="Store Passwords in plain text? (For idiots)" TextWrapping="Wrap" Width="468" Foreground="White" Height="31" FontSize="18"/>
                <CheckBox x:Name="Store_Pass_check" Content="" DockPanel.Dock="Right" Width="17" Margin="0,0,70,0" Height="17"/>
            </DockPanel>
            <Button Content="Clear Log" Click="Button_Click" Margin="10,135,703,10"/>
        </Grid>
    </Viewbox>
</Window>
